@model MLearningDB.QuestionOption

@{
    ViewBag.Title = "OptionCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OptionCreate</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>QuestionOption</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.option, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.option)
                @Html.ValidationMessageFor(model => model.option)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.match_left, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.match_left)
                @Html.ValidationMessageFor(model => model.match_left)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
