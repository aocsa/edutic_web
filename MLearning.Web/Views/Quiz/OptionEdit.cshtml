@model MLearningDB.QuestionOption

@{
    ViewBag.Title = "OptionEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OptionEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>QuestionOption</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        @Html.HiddenFor(model => model.created_at)
        @Html.HiddenFor(model => model.updated_at)
        @Html.HiddenFor(model => model.Question_id)
        <div class="form-group">
            @Html.LabelFor(model => model.option, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.option)
                @Html.ValidationMessageFor(model => model.option)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.match_left, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.match_left)
                @Html.ValidationMessageFor(model => model.match_left)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EditQuestion", "Quiz", new { question_id = Model.Question_id }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
