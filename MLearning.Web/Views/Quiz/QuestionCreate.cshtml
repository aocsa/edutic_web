@{
    ViewBag.Title = "QuestionCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QuestionCreate</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
