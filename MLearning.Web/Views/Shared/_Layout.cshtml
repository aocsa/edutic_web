<!DOCTYPE html>
<html class="ml-parent">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | MLearning CITEC</title>
    <link rel="icon" href="@Url.Content("~/images/favicon_64.ico")" type="image/x-icon" />
    <link rel="shortcut icon" href="@Url.Content("~/images/favicon_128.ico")" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo")
    @Styles.Render("~/Content/app")
    <!--Scripts.Render("~/bundles/modernizr")-->
    @RenderSection("styles", required: false)
	<!--This bundle was moved by the Telerik VS Extensions for compatibility reasons-->
	<!--Scripts.Render("~/bundles/jquery")-->
    @{
        var culture = System.Globalization.CultureInfo.CurrentCulture.ToString();
    }
	
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/kendo")

    <script src="@Url.Content("http://cdn.kendostatic.com/2015.1.429/js/cultures/kendo.culture." + culture + ".min.js")"></script>
    <script src="@Url.Content("~/Scripts/commons.js")"></script>
    <script type="text/javascript">
        kendo.culture("@culture");
    </script>
	<script src="@Url.Content("~/Scripts/kendo/2015.1.429/jszip.min.js")"></script>
</head>
<body ng-app="mlearningApp" ng-controller='indexCtrl'>
    <!--[if lt IE 7]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Add your site or application content here -->
 
    <div class="box-menu">
        <div class="box-menu-contenido">
            <div class="box-menu-logo">
                <div class="box-menu-logo-contenido">
                    <div class="box-menu-img">
                        <img class="img-responsive" src="/images/yeoman.png" alt="">
                    </div>
                    <div class="box-menu-titulo">
                        <h2>{{mensaje}}</h2>
                    </div>
                </div>
            </div>
            <div class="box-menu-items" ng-init="@if(ViewBag.VisibleMenus != null){  @("items = " + ViewBag.VisibleMenus) }">
                <!--|-->
                <div class="box-menu-items-contenido" ng-repeat="item in items track by $index" ng-switch on="item.codigo">
                    <div id="administrador" class="box-menu-item menu-verde" clase-activo="home-activo" activo="true" ng-switch-when="0" ng-cloak ng-show="showMenu">

                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("/","Admin")')">
                            <div class="box-menu-item-logo">
                                <div class="home">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Home</h4>
                            </div>
                        </div>

                    </div>
                    <div id="institucion" class="box-menu-item menu-rojo" clase-activo="institucion-activo" activo="false" ng-switch-when="1" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("Institutions","Admin")')">
                            <div class="box-menu-item-logo">
                                <div class="institucion">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Instituciones</h4>
                            </div>
                        </div>
                    </div>
                    <div id="unidad" class="box-menu-item menu-amarillo" clase-activo="unidad-activo" activo="false" ng-switch-when="2" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("LearningObjects","Admin")')">
                            <div class="box-menu-item-logo">
                                <div class="unidades">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Unidades</h4>
                            </div>
                        </div>
                    </div>
                    <div id="director" class="box-menu-item menu-verde" clase-activo="home-activo" activo="true" ng-switch-when="3" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("/","Head")')">
                            <div class="box-menu-item-logo">
                                <div class="home">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Home</h4>
                            </div>
                        </div>
                    </div>

                    <div id="profesor" class="box-menu-item menu-morado" clase-activo="profesor-activo" activo="false" ng-switch-when="4" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("Publishers", "Head")')">
                            <div class="box-menu-item-logo">
                                <div class="profesor">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Profesores</h4>
                            </div>
                        </div>
                    </div>

                    <div id="alumno" class="box-menu-item menu-amarillo" clase-activo="alumno-activo" activo="false" ng-switch-when="5" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("Consumers", "Head")')">
                            <div class="box-menu-item-logo">
                                <div class="alumno">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Alumnos</h4>
                            </div>
                        </div>
                    </div>
                    <div id="circulo" class="box-menu-item menu-rojo" clase-activo="circulo-activo" activo="false" ng-switch-when="6" ng-cloak ng-show="showMenu">
                        <div class="box-menu-item-contenido" ng-click="redireccionar('@Url.Action("Circles","Head")')">
                            <div class="box-menu-item-logo">
                                <div class="circulo">
                                </div>
                            </div>
                            <div class="box-menu-item-titulo">
                                <h4>Circulos</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @using Microsoft.AspNet.Identity
    <div class="box">
        @if (Request.IsAuthenticated)
        {
            <div class="box-user">
                <div class="box-user-linea">
                    <!--<div class="box-user-linea-body">-->
                    <span>@ViewBag.ActiveRole</span>
                    <div class="boton-usuario">
                        <div class="popup-user-raiz">
                            <div class="popup-user-opcion">
                                <span ng-click="openProfile()" class="popup-link">
                                    <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
                                    Perfil
                                </span>
                                @using (Html.BeginForm("LogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                { }
                                <span ng-click="logout()" class="popup-link">
                                    <i class="glyphicon glyphicon-off" aria-hidden="true"></i>
                                    Salir
                                </span>

                            </div>
                        </div>
                        <div>
                            <img src="/images/yeoman.png" class="img-responsive" alt="">
                        </div>
                        <span class="popup-user-name">@(User.Identity.GetUserName())</span>
                        <div class="showPopup cursor-pointer">
                            <i class="glyphicon glyphicon-chevron-down" aria-hidden="true"></i>
                        </div>

                    </div>
                </div>
            </div>
        }

        
        <div class="box-contenido body-content">
            <div class="container-fluid">
                @RenderBody()
                <!--<div class="" ng-view="">

                </div>-->
                <footer>
                    <div class="box-creditos">
                        <div class="box-creditos-linea">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-offset-1 col-xs-4" style="">
                                        <br>
                                        <img src="/images/face.png" class="box-footer-img" alt="">
                                        <img src="/images/twitter.png" class="box-footer-img" alt="">
                                        <img src="/images/in.png" class="box-footer-img" alt="">
                                    </div>
                                    <div class="col-xs-5" style="padding-top: 22px;">
                                        INICIO AYUDA TERMINOS DE USO <br>
                                        &copy; @DateTime.Now.Year <a href="http://citec.unsa.edu.pe/" target="_blank">CITEC</a> citec@unsa.edu.pe
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @(Html.Kendo().Window().Name("profileWindow")
    .Title("Perfil")
    .Visible(false)
    .Modal(true)
    .LoadContentFrom(Url.Action("editUser", "Home"))
    .Draggable(true)
    .Width(500))

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)

    <!-- Controllers -->
    <script src="@Url.Content("~/Scripts/app/controllers/admin/unidadCtrl.js")"></script>
</body>
</html>
