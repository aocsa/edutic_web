        <div class="form-group">
            <label class="col-md-3 control-label" for="username">Usuario <span class="asterisk">*</span></label>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.username, new { @class = "form-control", @required = "required", validationmessage = "Ingrese un usuario"})
                @Html.ValidationMessageFor(model => model.username)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label" for="password" style="padding-right: 0; padding-left: 0;">Contraseña <span class="asterisk">*</span></label>
            <div class="col-md-9">
             
                @Html.PasswordFor(model => model.password, new { value = "", @class = "form-control", @required = "required", validationmessage = "Ingrese una contraseña" })
                @Html.ValidationMessageFor(model => model.password, "", new { value = "" })
            </div>
        </div>

    </fieldset>
