    <div class="listConsumer">
        <div class="modal-body form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    <!--<select id="unidadId" multiple="multiple"></select>-->
                </div>
            </div>
        </div>

        <div class="modal-footer btn-actions">

            <a href="" class="btn btn-blue">Aceptar</a>
