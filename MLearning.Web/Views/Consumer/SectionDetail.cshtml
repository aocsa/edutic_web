<div class="modal-body" ng-init="inicio()">
    <button ng-click="cerrar()" class="close">×</button>
    <div class="css3-slides-viewer">
        <form name="css3-slides-viewer" method="post" action="./">
            <fieldset id="ml_learning_page">
                <!-- <legend>CSS3 Slides Viewer</legend> -->
                <ul>
                    <li ng-repeat="unidades in pages.datos">
                        <input type="radio" name="css3-slides-viewer-slides" autofocus="autofocus" id="slides-0{{$index}}" ng-checked="$index==0" />
                        <label for="slides-0{{$index}}"></label>
                        <section>
                            <img ng-src="{{unidades.lopage.loslide[0].loimage}}">
                            <div ng-repeat="page in unidades.lopage.loslide">

                                <!-- Seccion 0 -->
                                <section ng-if="page.lotype == 0" class="ml-page-kind-0">
                                    <div class="container-fluid">
                                        <h2  ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-sm-5 col-sm-offset-7 ml-text-html" ng-bind-html="trustedHtml(page.loparagraph)"></div>
                                            <!-- <div class="col-md-5 ml-right-img"></div> -->
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 1 -->
                                <section ng-if="page.lotype == 1" class="ml-page-kind-1">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-sm-7 ml-left-text ml-text-html" ng-bind-html="trustedHtml(page.loparagraph)"></div>
                                            <div class="col-sm-5 ml-right-img">
                                                <img ng-src="{{page.loimage}}">
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 2 -->
                                <section ng-if="page.lotype == 2" class="ml-page-kind-2">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 ml-text-html" ng-bind-html="trustedHtml(page.loparagraph)"></div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 3 -->
                                <section ng-if="page.lotype == 3" class="ml-page-kind-3">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-md-12 ml-text-html">
                                                <ul>
                                                    <li ng-repeat="fig in page.loitemize.loitem">
                                                        <i class="glyphicon glyphicon-ok"></i>
                                                        <p ng-bind-html="trustedHtml(fig.description)"></p>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 4 -->
                                <section ng-if="page.lotype == 4" class="ml-page-kind-4">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row ml-text-html">
                                            <!-- <div class="col-md-12 ml-left-text">
                                                <ul>
                                                    <li ng-repeat="fig in page.loitemize.loitem">
                                                        <img ng-src="{{fig.loimage}}">
                                                        <div class="text">
                                                            <p ng-bind-html="trustedHtml(fig.lotext)"></p>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div> -->
                                            <div class="col-lg-3 col-md-4 col-xs-6 thumb" ng-repeat="fig in page.loitemize.loitem">
                                                <a class="thumbnail" href="#">
                                                    <img class="img-responsive" ng-src="{{fig.loimage}}">
                                                    <div class="text" ng-show="fig.lotext">
                                                        <p ng-bind-html="trustedHtml(fig.lotext)"></p>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 5 -->
                                <section ng-if="page.lotype == 5" class="ml-page-kind-5">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-md-7 ml-text-html" ng-bind-html="trustedHtml(page.lotext)">
                                            </div>
                                            <div class="col-md-5 ml-right-img">
                                                <img ng-src="{{page.loimage}}">
                                            </div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 6 -->
                                <section ng-if="page.lotype == 6" class="ml-page-kind-6">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-sm-8 col-md-6">
                                                <img ng-src="{{page.loimage}}">
                                            </div>
                                            <div class="col-sm-4 col-md-6 ml-text-html" ng-bind-html="trustedHtml(page.loparagraph)"></div>
                                        </div>
                                    </div>
                                </section>

                                <!-- Seccion 7 -->
                                <section ng-if="page.lotype == 7" class="ml-page-kind-7">
                                    <div class="container-fluid">
                                        <h2 class="ml-title" ng-show="page.lotitle">{{page.lotitle}}</h2>
                                        <div class="row">
                                            <div class="col-md-9 ml-right-img">
                                                <ng-youtube-embed 
                                                    url="page.lovideo" 
                                                    width="100%"
                                                    autohide="true"
                                                    autoplay="false"
                                                    ccloadpolicy="false" 
                                                    color="white"
                                                    controls="true"
                                                    disablekb="false"
                                                    fs="true"
                                                    ivloadpolicy="false" 
                                                    playsinline="false" 
                                                    rel="false"
                                                    showinfo="false"
                                                    theme="light"
                                                    >
                                                </ng-youtube-embed>
                                            </div>
                                            <div class="col-md-3 ml-text-html" ng-bind-html="trustedHtml(page.loparagraph)"></div>
                                        </div>
                                    </div>
                                </section>
                            </div> <!-- Fin paginas -->

                        </section>
                        <!-- <div>primero</div>
                        <div>primero2</div>
                        <div>primero3</div>
                        <div>primero4</div>
                        <div>primero5</div>
                        <div>primero6</div> -->
                       
                    </li> <!-- Fin unidad  -->
                </ul> <!-- Fin seccion  -->
            </fieldset>
        </form>
    </div>
</div>


